# ==========================================
# AI Agent Team - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to Git!

# ==========================================
# Cloudflare API Configuration
# ==========================================
# Get your API token from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your-api-token-here

# Get your account ID from: https://dash.cloudflare.com/ (right sidebar)
CLOUDFLARE_ACCOUNT_ID=your-account-id-here

# ==========================================
# LLM API Configuration
# ==========================================
# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini API (免費額度更高)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# LLM Router Configuration
LLM_STRATEGY=balanced           # Options: cost | performance | balanced
PREFERRED_PROVIDER=             # Options: openai | gemini (留空則自動選擇)
USE_LLM_ROUTER=true            # 啟用多 LLM 智能路由

# ==========================================
# PostgreSQL Configuration (NAS)
# ==========================================
POSTGRES_HOST=192.168.1.114
POSTGRES_PORT=5532
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Morris1230

# ==========================================
# PostgreSQL HTTP Proxy
# ==========================================
POSTGRES_PROXY_API_KEY=your-secure-proxy-api-key-here
POSTGRES_PROXY_URL=http://192.168.1.114:8000

# ==========================================
# Application Configuration
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=debug
DOMAIN=shyangtsuen.xyz

# ==========================================
# Security
# ==========================================
JWT_SECRET=your-jwt-secret-key-here
API_KEY=your-api-key-here

# ==========================================
# NAS Backup Configuration
# ==========================================
NAS_HOST=192.168.1.114
NAS_USER=your-nas-user
NAS_PATH=/volume1/docker/ai-agent-backup
NAS_SSH_PORT=22

# ==========================================
# Feature Flags
# ==========================================
ENABLE_POSTGRES_VECTOR=true
ENABLE_HYBRID_SEARCH=false
ENABLE_AUTO_SYNC=true
SYNC_INTERVAL_SECONDS=300
